# ModernVista Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
PORT=3001
NODE_ENV=development
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# VistA Connection Settings (REQUIRED for real RPC calls)
# Update these to point to your VistA instance
VISTA_HOST=localhost
VISTA_PORT=9430
VISTA_ACCESS_CODE=your_access_code_here
VISTA_VERIFY_CODE=your_verify_code_here
VISTA_CONTEXT=OR CPRS GUI CHART

# VistA Broker Configuration
VISTA_BROKER_EXPERIMENTAL=true
VISTA_BROKER_PHASE3_ENABLE=true
VISTA_BROKER_CONNECT_TIMEOUT=8000
VISTA_BROKER_RPC_TIMEOUT=10000
VISTA_BROKER_IDLE_MS=300000

# Security
JWT_SECRET=your-super-secret-jwt-key-here-at-least-32-chars
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# NLP Configuration (Optional)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
ENABLE_CLOUD_NLP=false
# OPENAI_API_KEY=sk-your-openai-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/modernvista.log

# Caching (Optional)
CACHE_TTL=3600
# REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Metrics and Monitoring (Optional)
ADMIN_METRICS_ENABLE=false