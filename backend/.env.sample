# ModernVista Backend Environment Variables (Sample)
# Copy this file to .env and adjust values.

# --- Core Server ---
PORT=3001
NODE_ENV=development
API_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# --- Auth ---
# Generate a strong secret: `openssl rand -hex 32`
JWT_SECRET=change_me
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# --- VistA RPC (stub / future real connection) ---
VISTA_HOST=localhost
VISTA_PORT=9430
VISTA_ACCESS_CODE=
VISTA_VERIFY_CODE=
VISTA_CONTEXT=OR CPRS GUI CHART

# --- Feature Flags ---
ADMIN_METRICS_ENABLE=false
VISTA_BROKER_EXPERIMENTAL=false
VISTA_BROKER_CAPTURE=false
VISTA_BROKER_FRAME_CAPTURE=false

# --- Broker Advanced (Experimental) ---
VISTA_BROKER_PHASE3_ENABLE=false
VISTA_BROKER_XWB_ENABLE=false
VISTA_BROKER_XWB_REAL_ENABLE=false
VISTA_BROKER_XWB_REAL_STRICT=false
VISTA_BROKER_CONNECT_TIMEOUT=8000
VISTA_BROKER_RPC_TIMEOUT=10000
VISTA_BROKER_IDLE_MS=300000
VISTA_BROKER_CAPTURE_RAW=false
VISTA_BROKER_CAPTURE_DIR=./captures
VISTA_BROKER_CAPTURE_REDACT=true
VISTA_BROKER_MULTIPART_MAX_KB=512
VISTA_BROKER_REDACT_EXTRA=
VISTA_PARSE_STRICT_DOB=false

# --- NLP / LLM ---
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
ENABLE_CLOUD_NLP=false
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# --- Logging ---
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/modernvista.log

# --- Caching ---
CACHE_TTL=3600
# REDIS_URL=redis://localhost:6379

# --- Security / Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
