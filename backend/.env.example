# ModernVista Backend

## Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development
API_PREFIX=/api/v1

# VistA Connection
# For local Docker: localhost
# For Azure ACI: vista-demo-frasod-832.eastus.azurecontainer.io (see AZURE_VISTA_CONFIG.md)
VISTA_HOST=localhost
VISTA_PORT=9430
VISTA_ACCESS_CODE=
VISTA_VERIFY_CODE=

# VistA Broker Experimental Features (optional)
# VISTA_BROKER_EXPERIMENTAL=true
# VISTA_CONTEXT="OR CPRS GUI CHART"
# VISTA_BROKER_TIMEOUT_MS=5000
# VISTA_BROKER_PHASE3_ENABLE=true
# ADMIN_METRICS_ENABLE=true
# VISTA_BROKER_CAPTURE=true

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# NLP Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
ENABLE_CLOUD_NLP=false
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/modernvista.log

# Cache
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100